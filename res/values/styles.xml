<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatWTHStyle" parent="android:Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:textAppearance">@style/RWTHTextAppearance</item>
		<item name="android:textAppearanceSmall">@style/RWTHTextAppearanceSmall</item>
		<item name="android:textAppearanceLarge">@style/RWTHTextAppearanceLarge</item>
		
    </style>
    
    <style name="RWTHTextAppearance" parent="@android:style/TextAppearance">
    	<item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/RWTHBlue</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="RWTHTextAppearanceSmall" parent="@android:style/TextAppearance.Small">
    	<item name="android:textSize">16sp</item>
    	<item name="android:textColor">@color/RWTHBlue</item>
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="RWTHTextAppearanceLarge" parent="@android:style/TextAppearance.Large">
    	<item name="android:textSize">20sp</item>
    	<item name="android:textColor">@color/RWTHBlue</item>
    	<item name="android:textStyle">bold</item>
    </style>
</resources>
